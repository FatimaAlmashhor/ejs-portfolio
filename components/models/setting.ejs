<div x-show="showSkills" x-data="{
    post :'/dashboard/projects'
    }" id="skill_modal" aria-hidden="true"
        class=" overflow-y-auto overflow-x-hidden fixed right-4 left-0 top-4 z-50 justify-center items-center h-search w-screan flex justify-center items-center md:h-full md:inset-0">
        <div class="relative px-4 w-full max-w-md h-full md:h-auto">
    
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                <div class="flex justify-end p-2">
                    <button type="button" @click="showSkills=false"
                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white"
                        data-modal-toggle="skill_modal">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </button>
                </div>
    
                <div class="">
                    <!-- <form class="px-3 pb-4 space-y-6 lg:px-8 sm:pb-6 xl:pb-8" action="/dashboard/projects/edit" -->
                    <!-- method="post"> -->
                    <form class="px-6 pb-4 space-y-6 lg:px-8 sm:pb-6 xl:pb-8" x-bind:action="post" method="post"
                        enctype='multipart/form-data'>
                        <h3 class="text-xl  font-medium text-gray-900 dark:text-white">Create Project</h3>
                        <input type="hidden" name="id" x-text="value" x-model="value"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="id">
                        <div>
                            <label for="title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Your
                                Project title</label>
                            <template x-if="!newModel">
                                <input type="text" name="title" id="title" x-text="value1" x-model="value1"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="Payoo mobile app" required>
                            </template>
                            <template x-if="newModel">
                                <input type="text" name="title" id="title"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="Payoo mobile app" required>
                            </template>
                        </div>
                        <div>
                            <label for="des" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                                Project Description</label>
                            <template x-if="!newModel">
                                <input type="text" name="des" id="des" x-text="value2" x-model="value2"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="help you for create a modren website">
                            </template>
                            <template x-if="newModel">
                                <input type="text" name="des" id="des"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="help you for create a modren website">
                            </template>
                        </div>
                        <div>
                            <label for="position" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                                Project Position</label>
                            <template x-if="!newModel">
                                <input type="text" name="position" id="des" x-text="value3" x-model="value3"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="Payoo campany">
                            </template>
                            <template x-if="newModel">
                                <input type="text" name="position" id="des"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="Payoo campany">
                            </template>
                        </div>
                        <div>
                            <label for="role" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                                Project role</label>
                            <template x-if="!newModel">
                                <input type="text" name="role" id="role" x-text="value4" x-model="value4"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="Frontend developer">
                            </template>
                            <template x-if="newModel">
                                <input type="text" name="role"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                    placeholder="Frontend developer">
                            </template>
                        </div>
                        <div>
                            <label for="liveLink" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                                Project live link</label>
                            <input type="text" name="liveLink"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                placeholder="https://">
                        </div>
                        <div>
                            <label for="project" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                                Project live link</label>
                            <input type="file" name="project"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                                placeholder="https://">
                        </div>
    
                        <template x-if="!newModel">
                            <button @click="post='/dashboard/projects/edit/'" type="submit"
                                class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Edit</button>
                        </template>
                        <template x-if="newModel">
                            <button @click="post='/dashboard/projects/'" type="submit"
                                class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Save</button>
                        </template>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        const dotenv = require('dotenv')
    
        function editme() {
            return {
                is_loading: false,
    
                async editSkill() {
                    this.showSkills = true
                    this.is_loading = true;
    
                    window.location.href = `/dashboard/projects/edit/${this.id}/?title=${this.value1}&des=${this.value2}`
    
                }
            }
        }
    </script>